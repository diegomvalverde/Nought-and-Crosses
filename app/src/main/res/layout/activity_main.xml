<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="217dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="324dp"
            android:layout_height="324dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/pic2218956"
            android:columnCount="3"
            android:rowCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView00"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="23dp"
                android:layout_row="0"
                android:alpha="1"
                android:onClick="clickSpot"
                android:tag="0"

                />

            <ImageView
                android:id="@+id/imageView01"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="23dp"
                android:layout_row="0"
                android:alpha="1"
                android:onClick="clickSpot"
                android:tag="1"

                />

            <ImageView
                android:id="@+id/imageView02"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="23dp"
                android:layout_row="0"
                android:alpha="1"
                android:onClick="clickSpot"
                android:tag="2"

                />

            <ImageView
                android:id="@+id/imageView03"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="23dp"
                android:layout_row="1"
                android:alpha="1"
                android:onClick="clickSpot"
                android:tag="3"

                />

            <ImageView
                android:id="@+id/imageView04"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="23dp"
                android:layout_row="1"
                android:alpha="1"
                android:onClick="clickSpot"
                android:tag="4"

                />

            <ImageView
                android:id="@+id/imageView05"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="23dp"
                android:layout_row="1"
                android:alpha="1"
                android:onClick="clickSpot"
                android:tag="5"

                />

            <ImageView
                android:id="@+id/imageView06"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="23dp"
                android:layout_row="2"
                android:alpha="1"
                android:onClick="clickSpot"
                android:tag="6"

                />

            <ImageView
                android:id="@+id/imageView07"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="23dp"
                android:layout_row="2"
                android:alpha="1"
                android:onClick="clickSpot"
                android:tag="7"

                />

            <ImageView
                android:id="@+id/imageView08"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="23dp"
                android:layout_row="2"
                android:alpha="1"
                android:onClick="clickSpot"
                android:tag="8"

                />
        </GridLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="99dp"
            android:onClick="restartGame"
            android:text="Reiniciar" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relEndGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@color/negro"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="37dp">

        <LinearLayout
            android:layout_width="299dp"
            android:layout_height="141dp"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEndGame"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="El juego ha finalizado"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnEndGame"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimaryDark"
                android:onClick="restartGame"
                android:text="Reiniciar" />
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>